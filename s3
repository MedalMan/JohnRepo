const axios = require('axios');

exports.handler = async (event, context) => {
  // Define an array of websites to monitor
  const websites = [
    'https://example.com',
    'https://google.com',
    'https://amazon.com',
  ];

  try {
    const results = await Promise.all(
      websites.map(async (website) => {
        try {
          const response = await axios.get(website);

          // Check if the response status code is 200 (OK)
          if (response.status === 200) {
            return {
              website,
              status: 'OK',
            };
          } else {
            return {
              website,
              status: `HTTP ${response.status}`,
            };
          }
        } catch (error) {
          return {
            website,
            status: 'Error',
            error: error.message,
          };
        }
      })
    );

    // Log the results
    console.log('Monitoring results:', results);

    return {
      statusCode: 200,
      body: JSON.stringify({ message: 'Website monitoring completed', results }),
    };
  } catch (error) {
    console.error('Error:', error);

    return {
      statusCode: 500,
      body: JSON.stringify({ message: 'Error monitoring websites', error: error.message }),
    };
  }
};
